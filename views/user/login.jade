include ../layouts/menu
.container.top40
	.row
		.span5.offset1
			form.form-horizontal.well(action="/user/login",method="POST")
				fieldset 
					legend Log in to your account

					if(email)
						.alert.alert-error Your <b>email</b> or your <b>password</b> is incorrect.

					.control-group
						label.control-label(for="input-email") Your email
						.controls
							if(typeof email != "undefined")
								input(type="text",name="email",id="input-email",value=email)
							else
								input(type="password",name="email",id="input-email")
					.control-group
						label.control-label(for="input-password") Your password
						.controls
							input(type="text",name="password",id="input-password")
							p.help-block 
								a(href="/user/forgotten") You forgot your password ?
					.control-group
						.control-label
						label.controls.checkbox
							input(type="checkbox")
							| Remember me on that computer
					.form-actions
						button.btn.btn-primary.btn-large(type="submit") Log in

		.span4.offset1
			blockquote.top90
				p 
					| "jQuest is the most beautiful way to improve your skills about the Internets" 
					small Larry Page, New York Time, 2012

			big.top20 Need an accout ?
				a.btn.btn-large.left10 Sign up!


