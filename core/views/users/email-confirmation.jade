extends ../layout

block stylesheets
    link(href="http://fonts.googleapis.com/css?family=Share:400,700", type='text/css', rel="stylesheet")
    link(href="/stylesheets/style.css", type='text/css', rel="stylesheet")

block scripts
    script(src="/javascripts/vendor/bootstrap/bootstrap.min.js", type="text/javascript")

block title
    =__("Email confirmation")

block body

    include ../layouts/menu
    .container
        .page-header
            if state == "fail"
                h1=__("Account not activated")
                p!=__("Try again please.")               
            else if state == "success"
                h1=__("Congratulation!")
                p!=__("Your account is activated. <a href='/m'>Start the adventure</a>!")               
            else
                h1=__("It's almost done!")
                p
                    strong!=__("You will receive an email to confirm your account quickly.") + "<br />"
                    !=__("Looking forward to see you among the family!")                