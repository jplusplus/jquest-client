extends ../layout

block title
  =_("Sign up")

block stylesheets
  link(href="http://fonts.googleapis.com/css?family=Share:400,700", type='text/css', rel="stylesheet")
  link(href="/stylesheets/style.css", type='text/css', rel="stylesheet")

block scripts
  script(src="/javascripts/vendor/bootstrap/bootstrap.min.js", type="text/javascript")

block body

  include ../layouts/menu
  .container
    .row.top40.bottom40
      .span8.offset2
        form.form-horizontal.well.padding0(action="/user/login",method="POST")
          .row-fluid
            .span7
              fieldset.left20.top20.right20
                legend Sign up with your email

                if(email)
                  .alert.alert-error Your <b>email</b> or your <b>password</b> is incorrect.

                .control-group
                  label.control-label(for="input-email") Your email
                  .controls
                    if(typeof email != "undefined")
                      input(type="text",name="email",id="input-email",value=email)
                    else
                      input(type="password",name="email",id="input-email")

                .control-group
                  label.control-label(for="input-password") Your password
                  .controls
                    input(type="password",name="password",id="input-password")

                .control-group
                  label.control-label(for="input-password") Your password again
                  .controls
                    input(type="password",name="password_again",id="input-password")

                .form-actions.bottom0
                  button.btn.btn-primary.btn-large(type="submit")=_("Sign in")

            .span5.white-panel.connect-form         
              fieldset.margin20
                legend=_("Or sign up with...")
                ul.unstyled
                  li
                    a(href="/u/twitter-connect").btn.btn-twitter.btn-large.span12.bottom20 
                      .tl
                        i.right10.icon-twitter
                        =_("Your Twitter account")
                  li
                    a(href="/u/facebook-connect").btn.btn-facebook.btn-large.span12.bottom20 
                      .tl
                        i.right10.icon-facebook
                        =_("Your Facebook account")
                  li
                    a(href="/u/google-connect").btn.btn-google.btn-large.span12.bottom20
                      .tl
                        i.right10.icon-google-plus-sign
                        =_("Your Google account")
                  li
                    a(href="/u/github-connect").btn.btn-inverse.btn-large.span12.bottom20
                      .tl
                        i.right10.icon-github
                        =_("Your GitHub account")
